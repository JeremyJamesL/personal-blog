<ul>
    {%- for post in collections.post -%}
    <li class="mb-8">
        <h2 class="font-bold text-2xl"><a href={{post.url}}>{{post.data.title}}</a></h2>
        <p class="font-mono text-sm text-orange-900 mb-4">{{post.date.toLocaleDateString("en-US", { weekday: "long", year: 'numeric', month: 'long', day: 'numeric'})}}</p>
        <p>{{post.data.page.excerpt}}</p>
    </li>
    {%- endfor -%}
</ul>