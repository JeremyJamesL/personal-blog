---
layout: layout.njk
---
<article class="post">
    <h1 class="font-bold text-2xl">{{title}}</h1>
    <p class="font-mono text-sm text-orange-900 mb-4">{{page.date.toLocaleDateString("en-US", { weekday: "long", year: 'numeric', month: 'long', day: 'numeric'})}}</p>
    <img src="{{img}}" alt="{{title}}" class="border-4 border-white mb-4 sm:float-left sm:w-1/2 sm:mr-4 sm:mb-2" />
    {{content |  safe}}
</article>